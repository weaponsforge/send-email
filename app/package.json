{
  "name": "send-email",
  "version": "1.0.0",
  "description": "Sends emails using Gmail SMTP with username/pw or Google OAuth2",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "bin": {
    "send-email": "./dist/scripts/cli/send.js"
  },
  "scripts": {
    "dev": "vitest",
    "transpile": "tsc -p tsconfig.prod.json && tsc-alias && npm run copy:files",
    "transpile:noemit": "tsc -p tsconfig.json --noEmit",
    "watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint \"src/**/*.ts\" *.mjs *.ts",
    "lint:fix": "eslint \"src/**/*.ts\" *.mjs *.ts --fix",
    "copy:files": "vite-node ./src/scripts/build/copyTemplate.ts",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "report:view": "vite preview --outDir html",
    "docker:report:view": "vite preview --outDir html --host 0.0.0.0",
    "docker:test:ui": "vitest --ui --api.port 51204 --api.host 0.0.0.0",
    "docker:debug": "export IS_DOCKER=true && node --inspect=0.0.0.0:9229 ./node_modules/.bin/vite-node src/utils/sample.ts",
    "docker:dev:win": "export CHOKIDAR_USEPOLLING=1 && export CHOKIDAR_INTERVAL=1000 && vitest",
    "docker:watch:win": "tsc -p tsconfig.json --watch --watchFile dynamicPriorityPolling --watchDirectory dynamicPriorityPolling",
    "docker:test:ui:win": "export CHOKIDAR_USEPOLLING=1 && export CHOKIDAR_INTERVAL=1000 && npm run docker:test:ui",
    "send-email": "node ./dist/scripts/cli/send.js",
    "send-email:dev": "vite-node ./src/scripts/cli/send.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weaponsforge/send-email.git"
  },
  "keywords": [
    "email",
    "gmail",
    "smtp",
    "oauth2"
  ],
  "author": "weaponsforge",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/weaponsforge/send-email/issues"
  },
  "homepage": "https://github.com/weaponsforge/send-email#readme",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/ejs": "^3.1.5",
    "@types/node": "^24.9.1",
    "@types/nodemailer": "^7.0.3",
    "@types/sanitize-html": "^2.16.0",
    "@vitest/coverage-v8": "^4.0.2",
    "@vitest/ui": "^4.0.2",
    "eslint": "^9.38.0",
    "execa": "^9.6.0",
    "globals": "^16.4.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite-node": "^3.2.4",
    "vitest": "^4.0.2"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "googleapis": "^164.1.0",
    "nodemailer": "^7.0.10",
    "sanitize-html": "^2.17.0",
    "zod": "^3.24.2"
  }
}
